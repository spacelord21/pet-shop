{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "src",
    "jsx": "react-jsx",
    "paths": {
      "@features/*" : ["features/*"],
      "@app/*" : ["app/*"],
      "@entities/*" :["entities/*"],
      "@pages/*" : ["pages/*"],
      "@processes/*" :["processes/*"],
      "@shared/*" : ["shared/*"]
    },
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
